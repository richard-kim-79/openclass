# OpenClass 배포를 위한 환경 변수 템플릿

# 백엔드 환경 변수 (.env.production)
NODE_ENV=production
PORT=5001

# 데이터베이스 (프로덕션용 PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/openclass

# JWT 보안 키 (반드시 변경하세요!)
JWT_SECRET=your_super_secure_jwt_secret_key_for_production
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_for_production

# Cloudinary 설정
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# 프론트엔드 환경 변수 (.env.local.production)
NEXT_PUBLIC_API_URL=https://your-backend-domain.com
NEXT_PUBLIC_SOCKET_URL=https://your-backend-domain.com

# 선택사항: OpenAI API (AI 검색 기능용)
OPENAI_API_KEY=your_openai_api_key

# 벡터 검색 설정
ENABLE_VECTOR_SEARCH=true
EMBEDDING_MODEL=text-embedding-ada-002
VECTOR_DIMENSIONS=1536
